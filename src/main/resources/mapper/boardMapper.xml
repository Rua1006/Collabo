<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<!-- 공지사항 목록 -->
	<select id="boardList" resultType="com.reser.dto.BoardDTO">
		select * from board_tb order by regdate desc
	</select>
	<!-- 글 상세보기 -->
	<select id="boardDetail" resultType="com.reser.dto.BoardDTO">
		select * from board_tb where bno=#{bno}
	</select>
	<!-- 글 수 카운트 -->
	<select id="totalCount" resultType="integer" >
		select count(*) from board_tb
	</select>
	<!-- 공지사항 등록-->
	<insert id="boardInsert">
		insert into board_tb values(bseq.nextval, #{title}, #{content}, 'admin', sysdate, 0)
	</insert>
	<!-- 공지사항 삭제 -->
	<delete id="boardDelete">
		delete from board_tb where bno=#{bno}
	</delete>
	<!-- 공지사항 수정 -->
	<update id="boardEdit">
		update board_tb set title=#{title}, content=#{content} where bno=#{bno}
	</update>
	<!-- 조회수 -->
	<update id="countUp">
		update board_tb set visited=visited+1 where bno=#{bno}
	</update>
</mapper>